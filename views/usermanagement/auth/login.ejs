<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - OAEMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }
        .login-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
        }
        .login-header {
            text-align: center;
            padding: 30px 20px 20px;
            border-bottom: 1px solid #e0e0e0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px 10px 0 0;
        }
        .login-header h2 {
            margin: 0;
            font-weight: 600;
            font-size: 28px;
        }
        .login-header p {
            margin: 5px 0 0 0;
            font-size: 14px;
            opacity: 0.9;
        }
        .login-body {
            padding: 30px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            font-weight: 500;
            margin-bottom: 8px;
            color: #333;
        }
        .form-control {
            border: 1px solid #ddd;
            border-radius: 6px;
            padding: 10px 12px;
            font-size: 14px;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-login {
            width: 100%;
            padding: 10px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            transition: all 0.3s;
        }
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }
        .form-check {
            margin-bottom: 15px;
        }
        .form-check-input {
            border-color: #ddd;
        }
        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }
        .alert {
            border-radius: 6px;
            border: none;
            margin-bottom: 20px;
        }
        .login-footer {
            text-align: center;
            padding: 15px;
            font-size: 13px;
            color: #777;
        }
        .lock-icon {
            font-size: 48px;
            margin-bottom: 10px;
            opacity: 0.7;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="lock-icon">ðŸ”’</div>
                <h2>OAEMS</h2>
                <p>Open Accounting & Expense Management System</p>
            </div>
            
            <div class="login-body">
                <% if (typeof errors !== 'undefined' && errors) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <strong>Login Failed!</strong>
                        <ul class="mb-0">
                            <% Array.isArray(errors) ? errors.forEach(err => { %>
                                <li><%= err.msg || err %></li>
                            <% }) : { %>
                                <li><%= errors %></li>
                            <% } %>
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-info alert-dismissible fade show">
                        <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <form action="/api/um/auth/login" method="POST">
                    <div class="form-group">
                        <label for="emailOrUsername">Email or Username</label>
                        <input type="text" id="emailOrUsername" name="emailOrUsername" class="form-control" 
                               placeholder="Enter your email or username" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" 
                               placeholder="Enter your password" required>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="rememberMe" name="rememberMe" class="form-check-input" value="true">
                        <label class="form-check-label" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <button type="submit" class="btn btn-login">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </button>
                </form>

                <div style="text-align: center; margin-top: 20px;">
                    <small class="text-muted">
                        Demo credentials available upon request
                    </small>
                </div>
            </div>

            <div class="login-footer">
                <p class="mb-0">&copy; 2026 OAEMS. All rights reserved.</p>
                <p class="mb-0">Secure Account Management System</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
