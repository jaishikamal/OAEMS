<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-pencil"></i> Edit Branch</h5>
    </div>
    <div class="card-body">
        <form action="/usermanagement/branches/<%- branch.id %>" method="POST" class="row">
            <input type="hidden" name="_method" value="PUT">

            <div class="col-md-6 mb-3">
                <label for="code" class="form-label">Branch Code *</label>
                <input type="text" class="form-control" id="code" name="code" 
                       value="<%- branch.code %>" required>
            </div>

            <div class="col-md-6 mb-3">
                <label for="name" class="form-label">Branch Name *</label>
                <input type="text" class="form-control" id="name" name="name" 
                       value="<%- branch.name %>" required>
            </div>

            <div class="col-md-6 mb-3">
                <label for="level" class="form-label">Branch Level *</label>
                <select class="form-control" id="level" name="level" required>
                    <option value="head_office" <% if (branch.level === 'head_office') { %>selected<% } %>>Head Office</option>
                    <option value="regional" <% if (branch.level === 'regional') { %>selected<% } %>>Regional</option>
                    <option value="local" <% if (branch.level === 'local') { %>selected<% } %>>Local</option>
                </select>
            </div>

            <div class="col-md-6 mb-3">
                <label for="location" class="form-label">Location *</label>
                <input type="text" class="form-control" id="location" name="location" 
                       value="<%- branch.location %>" required>
            </div>

            <div class="col-md-6 mb-3">
                <label for="country" class="form-label">Country *</label>
                <input type="text" class="form-control" id="country" name="country" 
                       value="<%- branch.country %>" required>
            </div>

            <div class="col-md-6 mb-3">
                <label for="state" class="form-label">State/Province</label>
                <input type="text" class="form-control" id="state" name="state" 
                       value="<%- branch.state || '' %>">
            </div>

            <div class="col-md-6 mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" 
                       value="<%- branch.city || '' %>">
            </div>

            <div class="col-md-6 mb-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-control" id="status" name="status">
                    <option value="active" <% if (branch.status === 'active') { %>selected<% } %>>Active</option>
                    <option value="inactive" <% if (branch.status === 'inactive') { %>selected<% } %>>Inactive</option>
                </select>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a href="/usermanagement/branches" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
