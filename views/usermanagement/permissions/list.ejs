<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-lock"></i> Permissions</h5>
        <a href="/usermanagement/permissions/create" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle"></i> Create Permission
        </a>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all">
                    All Permissions
                </button>
            </li>
            <% ['UserManagement', 'Accounting', 'Reports', 'Administration'].forEach(module => { %>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="<%- module.toLowerCase() %>-tab" data-bs-toggle="tab" data-bs-target="#<%- module.toLowerCase() %>">
                        <%- module %>
                    </button>
                </li>
            <% }); %>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="all">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Module</th>
                                <th>Resource</th>
                                <th>Action</th>
                                <th>Status</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (permissions && permissions.length > 0) { %>
                                <% permissions.forEach(perm => { %>
                                    <tr>
                                        <td><code><%- perm.code %></code></td>
                                        <td><%- perm.name %></td>
                                        <td><span class="badge bg-light text-dark"><%- perm.module %></span></td>
                                        <td><%- perm.resource %></td>
                                        <td><span class="badge bg-info"><%- perm.action %></span></td>
                                        <td>
                                            <% if (perm.status === 'active') { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (perm.isSystem) { %>
                                                <span class="badge bg-info">System</span>
                                            <% } else { %>
                                                <span class="badge bg-warning">Custom</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <% if (!perm.isSystem) { %>
                                                    <a href="/usermanagement/permissions/<%- perm.id %>/edit" class="btn btn-outline-primary">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger" onclick="confirmDelete('<%- perm.id %>')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        No permissions found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(permId) {
    if (confirm('Delete this permission?')) {
        fetch(`/usermanagement/permissions/${permId}`, {method: 'DELETE'})
            .then(response => {
                if (response.ok) location.reload();
            });
    }
}
</script>
