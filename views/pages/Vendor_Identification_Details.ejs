<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
  <!-- Success/Error Messages -->
  <% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %> <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- Header section-->
  <div class="row gy-3 align-items-center mb-4">
    <div class="col-lg-6">
      <div class="d-flex align-items-start gap-2">
        <div class="avatar avatar-md flex-shrink-0 bg-label-primary">
          <span class="avatar-initial rounded">
            <i class="icon-base ti tabler-building"></i>
          </span>
        </div>
        <div>
          <h4 class="mb-1">Vendor Identification Management</h4>
          <p class="text-muted mb-0">
            Manage your vendors with complete identification details and status tracking here.
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-6 d-flex flex-wrap justify-content-lg-end gap-2">
      <button
        type="button"
        class="btn btn-label-primary"
        data-bs-toggle="modal"
        data-bs-target="#addModal"
      >
        <i class="icon-base ti tabler-plus me-1"></i>Add Vendor
      </button>
    </div>
  </div>
  <!--Header section---->

  <div class="col-12">
    <!-- Vendor Table -->
    <div class="card">
      <div class="card-datatable">
        <table class="datatables-users table border-top">
          <thead>
            <tr>
              <th>Vendor ID</th>
              <th>Legal Name</th>
              <th>Trade Name</th>
              <th>Type</th>
              <th>Category</th>
              <th>Country</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (typeof vendors !== 'undefined' && vendors && vendors.length > 0) { %> <%
            vendors.forEach(function(vendor) { %>
            <tr>
              <td><strong><%= vendor.vendorId %></strong></td>
              <td><%= vendor.vendorLegalName || 'N/A' %></td>
              <td><%= vendor.tradeName %></td>
              <td>
                <% if (vendor.vendorType) { %>
                <span class="badge bg-label-info"><%= vendor.vendorType %></span>
                <% } else { %>
                <span class="text-muted">N/A</span>
                <% } %>
              </td>
              <td>
                <% if (vendor.vendorCategory) { %>
                <span class="badge bg-label-secondary"><%= vendor.vendorCategory %></span>
                <% } else { %>
                <span class="text-muted">N/A</span>
                <% } %>
              </td>
              <td><%= vendor.country || 'Nepal' %></td>
              <td>
                <% if (vendor.status === 'Active') { %>
                <span class="badge bg-label-success"><%= vendor.status %></span>
                <% } else if (vendor.status === 'Inactive' || vendor.status === 'Rejected') { %>
                <span class="badge bg-label-danger"><%= vendor.status %></span>
                <% } else if (vendor.status === 'Pending') { %>
                <span class="badge bg-label-warning"><%= vendor.status %></span>
                <% } else { %>
                <span class="badge bg-label-light"><%= vendor.status %></span>
                <% } %>
              </td>
              <td class="text-end">
                <div class="d-inline-flex gap-2">
                  <button
                    class="btn btn-sm btn-icon btn-text-secondary rounded-pill btn-edit"
                    data-id="<%= vendor.id %>"
                    data-vendor-id="<%= vendor.vendorId %>"
                    data-vendor-legal-name="<%= vendor.vendorLegalName || '' %>"
                    data-trade-name="<%= vendor.tradeName %>"
                    data-vendor-type="<%= vendor.vendorType || '' %>"
                    data-vendor-category="<%= vendor.vendorCategory || '' %>"
                    data-country="<%= vendor.country || 'Nepal' %>"
                    data-status="<%= vendor.status || 'Draft' %>"
                    title="Edit Vendor"
                  >
                    <i class="icon-base ti tabler-edit"></i>
                  </button>
                   <form
                    action="/Vendor/<%= vendor.id %>/delete"
                    method="POST"
                    class="d-inline delete-form"
                  >
                    <button
                      class="btn btn-sm btn-icon btn-text-danger rounded-pill"
                      type="submit"
                      title="Delete Vendor"
                    >
                      <i class="icon-base ti tabler-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="8" class="text-center py-4">
                <div class="text-muted">
                  <i class="icon-base ti tabler-alert-circle fs-3 mb-2"></i>
                  <p>No vendors found. Please add new vendor.</p>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Vendor Table -->
  </div>

  <!-- Add Modal -->
  <div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Add New Vendor</h4>
            <p class="text-body-secondary">Enter vendor identification details</p>
          </div>
          <!-- Add vendor form -->
          <form id="addForm" action="/Vendor" method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="vendorId">
                  Vendor ID <span class="text-muted">(6 digits)</span>
                </label>
                <div class="input-group">
                  <input
                    type="text"
                    id="vendorId"
                    name="vendorId"
                    class="form-control"
                    placeholder="Auto-generate or enter 6-digit ID"
                    maxlength="6"
                  />
                  <button class="btn btn-outline-secondary" type="button" id="btnGenerateVendorId">Generate</button>
                </div>
                <small class="text-muted">Click 'Generate' to auto-create a unique 6-digit ID. You can also enter one manually.</small>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="tradeName">
                  Trade Name <span class="text-danger">*</span>
                </label>
                <input
                  type="text"
                  id="tradeName"
                  name="tradeName"
                  class="form-control"
                  placeholder="Enter trade name"
                  required
                />
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label class="form-label" for="vendorLegalName">
                  Legal Name
                </label>
                <input
                  type="text"
                  id="vendorLegalName"
                  name="vendorLegalName"
                  class="form-control"
                  placeholder="Enter legal name"
                />
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="vendorType">Vendor Type</label>
                <select
                  id="vendorType"
                  name="vendorType"
                  class="form-select"
                >
                  <option value="">Select Type</option>
                  <option value="Individual">Individual</option>
                  <option value="Company">Company</option>
                  <option value="Government">Government</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="vendorCategory">Vendor Category</label>
                <select
                  id="vendorCategory"
                  name="vendorCategory"
                  class="form-select"
                >
                  <option value="">Select Category</option>
                  <option value="Stationery">Stationery</option>
                  <option value="Travel">Travel</option>
                  <option value="IT">IT</option>
                  <option value="Consulting">Consulting</option>
                  <option value="Equipment">Equipment</option>
                  <option value="Services">Services</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="country">Country</label>
                <select
                  id="country"
                  name="country"
                  class="form-select"
                >
                  <option value="Nepal">Nepal</option>
                  <option value="Foreign">Foreign</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="status">Status</label>
                <select
                  id="status"
                  name="status"
                  class="form-select"
                >
                  <option value="Draft">Draft</option>
                  <option value="Pending">Pending</option>
                  <option value="Active">Active</option>
                  <option value="Inactive">Inactive</option>
                  <option value="Rejected">Rejected</option>
                </select>
              </div>
            </div>
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-primary me-3">
                Add Vendor
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Add vendor form  -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Add Modal -->

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Edit Vendor</h4>
            <p class="text-body-secondary">Update vendor identification details</p>
          </div>
          <!-- Edit vendor form -->
          <form id="editForm" method="POST">
            <input type="hidden" id="edit_id" name="id" />
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="edit_vendorId">
                  Vendor ID <span class="text-danger">*</span>
                </label>
                <input
                  type="text"
                  id="edit_vendorId"
                  name="vendorId"
                  class="form-control bg-light"
                  disabled
                />
                <small class="text-muted">Vendor ID cannot be changed</small>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="edit_tradeName">
                  Trade Name <span class="text-danger">*</span>
                </label>
                <input
                  type="text"
                  id="edit_tradeName"
                  name="tradeName"
                  class="form-control"
                  placeholder="Enter trade name"
                  required
                />
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label class="form-label" for="edit_vendorLegalName">
                  Legal Name
                </label>
                <input
                  type="text"
                  id="edit_vendorLegalName"
                  name="vendorLegalName"
                  class="form-control"
                  placeholder="Enter legal name"
                />
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="edit_vendorType">Vendor Type</label>
                <select
                  id="edit_vendorType"
                  name="vendorType"
                  class="form-select"
                >
                  <option value="">Select Type</option>
                  <option value="Individual">Individual</option>
                  <option value="Company">Company</option>
                  <option value="Government">Government</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="edit_vendorCategory">Vendor Category</label>
                <select
                  id="edit_vendorCategory"
                  name="vendorCategory"
                  class="form-select"
                >
                  <option value="">Select Category</option>
                  <option value="Stationery">Stationery</option>
                  <option value="Travel">Travel</option>
                  <option value="IT">IT</option>
                  <option value="Consulting">Consulting</option>
                  <option value="Equipment">Equipment</option>
                  <option value="Services">Services</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="edit_country">Country</label>
                <select
                  id="edit_country"
                  name="country"
                  class="form-select"
                >
                  <option value="Nepal">Nepal</option>
                  <option value="Foreign">Foreign</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="edit_status">Status</label>
                <select
                  id="edit_status"
                  name="status"
                  class="form-select"
                >
                  <option value="Draft">Draft</option>
                  <option value="Pending">Pending</option>
                  <option value="Active">Active</option>
                  <option value="Inactive">Inactive</option>
                  <option value="Rejected">Rejected</option>
                </select>
              </div>
            </div>
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-warning me-3">
                Update Vendor
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Edit vendor form -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Edit Modal -->
</div>
<!-- / Content -->

<script>
  // Handle edit button clicks
  document.addEventListener("DOMContentLoaded", function () {
    const editButtons = document.querySelectorAll(".btn-edit");
    const editModal = new bootstrap.Modal(document.getElementById("editModal"));
    const editForm = document.getElementById("editForm");

    editButtons.forEach((button) => {
      button.addEventListener("click", function () {
        const id = this.getAttribute("data-id");
        const vendorId = this.getAttribute("data-vendor-id");
        const vendorLegalName = this.getAttribute("data-vendor-legal-name");
        const tradeName = this.getAttribute("data-trade-name");
        const vendorType = this.getAttribute("data-vendor-type");
        const vendorCategory = this.getAttribute("data-vendor-category");
        const country = this.getAttribute("data-country");
        const status = this.getAttribute("data-status");

        // Set form action
        editForm.action = "/Vendor/" + id;

        // Populate form fields
        document.getElementById("edit_id").value = id;
        document.getElementById("edit_vendorId").value = vendorId;
        document.getElementById("edit_vendorLegalName").value = vendorLegalName;
        document.getElementById("edit_tradeName").value = tradeName;
        document.getElementById("edit_vendorType").value = vendorType;
        document.getElementById("edit_vendorCategory").value = vendorCategory;
        document.getElementById("edit_country").value = country;
        document.getElementById("edit_status").value = status;

        // Show modal
        editModal.show();
      });
    });

    // Confirm delete
    const deleteForms = document.querySelectorAll(".delete-form");
    deleteForms.forEach((form) => {
      form.addEventListener("submit", function (e) {
        if (!confirm("Are you sure you want to delete this vendor?")) {
          e.preventDefault();
        }
      });
    });

    // Generate Vendor ID
    const btnGenerate = document.getElementById("btnGenerateVendorId");
    const vendorIdInput = document.getElementById("vendorId");
    const addModalEl = document.getElementById("addModal");

    async function fetchAndSetVendorId() {
      if (!btnGenerate) return;
      try {
        btnGenerate.disabled = true;
        btnGenerate.innerHTML = 'Generating...';
        const res = await fetch('/Vendor/generate-vendor-id');
        if (!res.ok) throw new Error('Failed to generate ID');
        const id = await res.text();
        if (vendorIdInput) vendorIdInput.value = id;
      } catch (err) {
        console.error(err);
        alert('Unable to generate Vendor ID. Please try again.');
      } finally {
        if (btnGenerate) {
          btnGenerate.disabled = false;
          btnGenerate.innerHTML = 'Generate';
        }
      }
    }

    if (btnGenerate) {
      btnGenerate.addEventListener('click', fetchAndSetVendorId);
    }

    // Validate vendorId on add form submit (if provided)
    const addForm = document.getElementById('addForm');
    if (addForm) {
      addForm.addEventListener('submit', function (e) {
        const val = vendorIdInput && vendorIdInput.value.trim();
        if (val && !/^\d{6}$/.test(val)) {
          e.preventDefault();
          alert('Vendor ID must be a 6-digit number.');
          return false;
        }
      });
    }

    // Auto-generate when add modal is shown (if empty)
    if (addModalEl) {
      addModalEl.addEventListener('shown.bs.modal', function () {
        if (vendorIdInput && !vendorIdInput.value.trim()) {
          fetchAndSetVendorId();
        }
      });
      // Clear vendorId on modal hide
      addModalEl.addEventListener('hidden.bs.modal', function () {
        if (vendorIdInput) vendorIdInput.value = '';
      });
    }
  });
</script>

