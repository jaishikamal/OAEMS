<div class="container my-5">
  <!-- Success/Error Messages -->
  <% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %> <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Cost Centers Management</h1>
    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#addModal"
    >
      <i class="bi bi-plus-circle me-2"></i>Add Cost Center
    </button>
  </div>

  <!-- Cost Centers Table -->
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Code</th>
              <th>Title</th>
              <th>Type</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (costdata && costdata.length > 0) { %> <%
            costdata.forEach(center => { %>
            <tr>
              <td><%= center.id %></td>
              <td>
                <span class="badge bg-secondary"><%= center.code %></span>
              </td>
              <td><%= center.title %></td>
              <td>
                <% 
                let typeBadge = 'bg-info';
                let typeLabel = center.type || 'N/A';
                if (center.type === 'HEAD_OFFICE') {
                  typeBadge = 'bg-danger';
                  typeLabel = 'Head Office';
                } else if (center.type === 'PROVINCE_OFFICE') {
                  typeBadge = 'bg-warning';
                  typeLabel = 'Province Office';
                } else if (center.type === 'BRANCH') {
                  typeBadge = 'bg-primary';
                  typeLabel = 'Branch';
                } else if (center.type === 'EXTENSION_COUNTER') {
                  typeBadge = 'bg-success';
                  typeLabel = 'Extension Counter';
                }
                %>
                <span class="badge <%= typeBadge %>"><%= typeLabel %></span>
              </td>
              <td>
                <% if (center.status === 1) { %>
                <span class="badge bg-success">Active</span>
                <% } else { %>
                <span class="badge bg-danger">Inactive</span>
                <% } %>
              </td>
              <td><%= new Date(center.createdAt).toLocaleDateString() %></td>
              <td>
                <div class="dropdown">
                  <button
                    class="btn btn-sm btn-outline-secondary dropdown-toggle"
                    type="button"
                    id="actionDropdown<%= center.id %>"
                    data-bs-toggle="dropdown"
                  ></button>
                  <ul
                    class="dropdown-menu"
                    aria-labelledby="actionDropdown<%= center.id %>"
                  >
                    <li>
                      <button
                        class="dropdown-item edit-btn"
                        data-id="<%= center.id %>"
                        data-code="<%= center.code %>"
                        data-title="<%= center.title %>"
                        data-type="<%= center.type %>"
                        data-status="<%= center.status %>"
                      >
                        <i class="bi bi-pencil text-warning me-2"></i>Edit
                      </button>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                      <form
                        action="/cost-centers/<%= center.id %>/delete"
                        method="POST"
                        class="d-inline delete-form"
                      >
                        <button class="dropdown-item text-danger" type="submit">
                          <i class="bi bi-trash me-2"></i>Delete
                        </button>
                      </form>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="7" class="text-center text-muted py-4">
                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                No cost centers found
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Cost Center</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <form action="/cost-centers" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
            <select class="form-select" id="type" name="type" required>
              <option value="">Select Type</option>
              <% Object.entries(costCenterTypes).forEach(([key, config]) => { %>
                <option value="<%= key %>">
                  <%= config.label %> (<%= String(config.codeRange.min).padStart(3, '0') %>-<%= String(config.codeRange.max).padStart(3, '0') %>)
                </option>
              <% }); %>
            </select>
            <small class="text-muted">Code will be auto-generated based on selected type</small>
          </div>
          <div class="mb-3">
            <label class="form-label">Code Preview</label>
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                id="codePreview"
                value="---"
                disabled
              />
              <button class="btn btn-outline-secondary" type="button" id="previewBtn" disabled>
                <i class="bi bi-arrow-clockwise"></i> Preview
              </button>
            </div>
            <small class="text-muted">Next available code will be auto-generated</small>
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              placeholder="Enter cost center title"
              required
            />
          </div>
          <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status">
              <option value="1" selected>Active</option>
              <option value="0">Inactive</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Cost Center</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <form id="editForm" method="POST">
        <div class="modal-body">
          <input type="hidden" id="edit_id" name="id" />
          <div class="mb-3">
            <label for="edit_type" class="form-label">Type <span class="text-danger">*</span></label>
            <select class="form-select" id="edit_type" name="type" required>
              <option value="">Select Type</option>
              <% Object.entries(costCenterTypes).forEach(([key, config]) => { %>
                <option value="<%= key %>" 
                  data-min="<%= config.codeRange.min %>" 
                  data-max="<%= config.codeRange.max %>">
                  <%= config.label %> (<%= String(config.codeRange.min).padStart(3, '0') %>-<%= String(config.codeRange.max).padStart(3, '0') %>)
                </option>
              <% }); %>
            </select>
            <small class="text-muted">Select the type to see valid code range</small>
          </div>
          <div class="mb-3">
            <label for="edit_code" class="form-label">Code <span class="text-danger">*</span></label>
            <input
              type="text"
              class="form-control"
              id="edit_code"
              name="code"
              maxlength="3"
              pattern="\d{3}"
              required
            />
            <small id="editCodeHelp" class="text-muted">Enter code within the valid range for selected type</small>
          </div>
          <div class="mb-3">
            <label for="edit_title" class="form-label">Title <span class="text-danger">*</span></label>
            <input
              type="text"
              class="form-control"
              id="edit_title"
              name="title"
              required
            />
          </div>
          <div class="mb-3">
            <label for="edit_status" class="form-label">Status</label>
            <select class="form-select" id="edit_status" name="status">
              <option value="1">Active</option>
              <option value="0">Inactive</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-warning">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Add Modal - Type selection and code preview
    const typeSelect = document.getElementById("type");
    const codePreview = document.getElementById("codePreview");
    const previewBtn = document.getElementById("previewBtn");

    typeSelect.addEventListener("change", function() {
      if (this.value) {
        previewBtn.disabled = false;
        // Auto-fetch preview when type changes
        fetchCodePreview(this.value);
      } else {
        previewBtn.disabled = true;
        codePreview.value = "---";
      }
    });

    previewBtn.addEventListener("click", function() {
      const selectedType = typeSelect.value;
      if (selectedType) {
        fetchCodePreview(selectedType);
      }
    });

    async function fetchCodePreview(type) {
      try {
        codePreview.value = "Loading...";
        const response = await fetch(`/cost-centers/next-code?type=${type}`);
        const data = await response.json();
        
        if (data.success) {
          codePreview.value = data.code;
        } else {
          codePreview.value = "Error";
          alert(data.error || "Failed to generate code preview");
        }
      } catch (error) {
        codePreview.value = "Error";
        console.error("Error fetching code preview:", error);
      }
    }

    // Edit Modal - Type change handler
    const editTypeSelect = document.getElementById("edit_type");
    const editCodeInput = document.getElementById("edit_code");
    const editCodeHelp = document.getElementById("editCodeHelp");

    editTypeSelect.addEventListener("change", function() {
      const selectedOption = this.options[this.selectedIndex];
      if (selectedOption.value) {
        const min = selectedOption.dataset.min;
        const max = selectedOption.dataset.max;
        editCodeHelp.textContent = `Enter code between ${String(min).padStart(3, '0')} and ${String(max).padStart(3, '0')}`;
        editCodeInput.placeholder = `${String(min).padStart(3, '0')}-${String(max).padStart(3, '0')}`;
      }
    });

    // Handle edit button clicks
    const editButtons = document.querySelectorAll(".edit-btn");
    const editModal = new bootstrap.Modal(document.getElementById("editModal"));
    const editForm = document.getElementById("editForm");

    editButtons.forEach((button) => {
      button.addEventListener("click", function () {
        const id = this.getAttribute("data-id");
        const code = this.getAttribute("data-code");
        const title = this.getAttribute("data-title");
        const type = this.getAttribute("data-type");
        const status = this.getAttribute("data-status");

        // Set form action
        editForm.action = "/cost-centers/" + id;

        // Populate form fields
        document.getElementById("edit_id").value = id;
        document.getElementById("edit_code").value = code;
        document.getElementById("edit_title").value = title;
        document.getElementById("edit_type").value = type;
        document.getElementById("edit_status").value = status;

        // Trigger type change to update help text
        editTypeSelect.dispatchEvent(new Event('change'));

        // Show modal
        editModal.show();
      });
    });

    // Confirm delete
    const deleteForms = document.querySelectorAll(".delete-form");
    deleteForms.forEach((form) => {
      form.addEventListener("submit", function (e) {
        if (!confirm("Are you sure you want to delete this cost center?")) {
          e.preventDefault();
        }
      });
    });

    // Auto-pad code input to 3 digits and restrict to numbers (for edit only)
    if (editCodeInput) {
      editCodeInput.addEventListener("input", function (e) {
        // Only allow numbers
        this.value = this.value.replace(/\D/g, "");
      });
      
      editCodeInput.addEventListener("blur", function (e) {
        // Pad with leading zeros on blur
        if (this.value.length > 0 && this.value.length < 3) {
          this.value = this.value.padStart(3, "0");
        }
      });
    }
  });
</script>