<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
  <!-- Success/Error Messages -->
  <% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %> <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- Header section-->
  <div class="row gy-3 align-items-center mb-4">
    <div class="col-lg-6">
      <div class="d-flex align-items-start gap-2">
        <div class="avatar avatar-md flex-shrink-0 bg-label-primary">
          <span class="avatar-initial rounded">
            <i class="icon-base ti tabler-category"></i>
          </span>
        </div>
        <div>
          <h4 class="mb-1">Expenses Head Management</h4>
          <p class="text-muted mb-0">
            Manage your expenses heads with account code groups here.
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-6 d-flex flex-wrap justify-content-lg-end gap-2">
      <button
        type="button"
        class="btn btn-label-primary"
        data-bs-toggle="modal"
        data-bs-target="#addModal"
      >
        <i class="icon-base ti tabler-plus me-1"></i>Add Expenses Head
      </button>
    </div>
  </div>
  <!--Header section---->

  <div class="col-12">
    <!-- Expenses Head Table -->
    <div class="card">
      <div class="card-datatable">
        <table class="datatables-users table border-top">
          <thead>
            <tr>
              <th>ID</th>
              <th>Account Code Group</th>
              <th>Code</th>
              <th>Title</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (expensesHeads && expensesHeads.length > 0) { %> <%
            expensesHeads.forEach(function(expenses) { %>
            <tr>
              <td><%= expenses.id %></td>
              <td>
                <% if (expenses.accountCodeGroup) { %>
                <span class="badge bg-label-info">
                  <%= expenses.accountCodeGroup.description %>
                </span>
                <% } else { %>
                <span class="text-muted">N/A</span>
                <% } %>
              </td>
              <td><strong><%= expenses.code %></strong></td>
              <td><%= expenses.title || 'No title' %></td>
              <td data-field="status">
                <% if (expenses.status) { %>
                <span class="badge bg-label-success">Active</span>
                <% } else { %>
                <span class="badge bg-label-danger">Inactive</span>
                <% } %>
              </td>
              <td class="text-end">
                <div class="d-inline-flex gap-2">
                  <button
                    class="btn btn-sm btn-icon btn-text-secondary rounded-pill btn-edit"
                    data-id="<%= expenses.id %>"
                    data-account-code-groups-id="<%= expenses.account_code_groups_id %>"
                    data-code="<%= expenses.code %>"
                    data-title="<%= expenses.title || '' %>"
                    data-status="<%= expenses.status ? '1' : '0' %>"
                    title="Edit Expenses Head"
                  >
                    <i class="icon-base ti tabler-edit"></i>
                  </button>
                  <form
                    action="/Expenses_head/<%= expenses.id %>/delete"
                    method="POST"
                    class="d-inline delete-form"
                  >
                    <button
                      class="btn btn-sm btn-icon btn-text-danger rounded-pill"
                      type="submit"
                      title="Delete Expenses Head"
                    >
                      <i class="icon-base ti tabler-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="6" class="text-center py-4">
                <div class="text-muted">
                  <i class="icon-base ti tabler-alert-circle fs-3 mb-2"></i>
                  <p>No expenses heads found. Please add new expenses heads.</p>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Expenses Head Table -->
  </div>

  <!-- Add Modal -->
  <div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Add New Expenses Head</h4>
            <p class="text-body-secondary">Enter expenses head details</p>
          </div>
          <!-- Add expenses head form -->
          <form action="/Expenses_head" method="POST">
            <div class="col-12 mb-3">
              <label class="form-label" for="account_code_groups_id">
                Account Code Group <span class="text-danger">*</span>
              </label>
              <select
                id="account_code_groups_id"
                name="account_code_groups_id"
                class="form-select"
                required
              >
                <option  value="">Select Account Code Group</option>
                <% if (typeof accountCodeGroups !== 'undefined' &&
                accountCodeGroups.length > 0) { %> <%
                accountCodeGroups.forEach(function(group) { %>
                <option value="<%= group.id %>"><%= group.code %></option>
                <% }); %> <% } %>
              </select>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="code">Code</label>
              <input
                type="text"
                id="code"
                name="code"
                class="form-control"
                value="Auto-generated"
                disabled
              />
              <small class="text-muted"
                >Code will be automatically generated</small
              >
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="title">
                Title <span class="text-danger">*</span>
              </label>
              <textarea
                id="title"
                name="title"
                class="form-control"
                placeholder="Enter title"
                rows="3"
                required
              ></textarea>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="status">Status</label>
              <select id="status" name="status" class="form-select">
                <option value="true" selected>Active</option>
                <option value="false">Inactive</option>
              </select>
            </div>
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-primary me-3">
                Add Expenses Head
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Add expenses head form  -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Add Modal -->

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Edit Expenses Head</h4>
            <p class="text-body-secondary">Update expenses head details</p>
          </div>
          <!-- Edit expenses head form -->
          <form id="editForm" method="POST">
            <input type="hidden" id="edit_id" name="id" />
            <div class="col-12 mb-3">
              <label class="form-label" for="edit_account_code_groups_id">
                Account Code Group <span class="text-danger">*</span>
              </label>
              <select
                id="edit_account_code_groups_id"
                name="account_code_groups_id"
                class="form-select"
                required
              >
                <option value="">Select Account Code Group</option>
                <% if (typeof accountCodeGroups !== 'undefined' &&
                accountCodeGroups.length > 0) { %> <%
                accountCodeGroups.forEach(function(group) { %>
                <option value="<%= group.id %>"><%= group.title %></option>
                <% }); %> <% } %>
              </select>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="edit_code">Code</label>
              <input
                type="text"
                id="edit_code"
                name="code"
                class="form-control bg-light"
                disabled
              />
              <small class="text-muted">Code cannot be changed</small>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="edit_title">
                Title <span class="text-danger">*</span>
              </label>
              <textarea
                id="edit_title"
                name="title"
                class="form-control"
                placeholder="Enter title"
                rows="3"
                required
              ></textarea>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="edit_status">Status</label>
              <select id="edit_status" name="status" class="form-select">
                <option value="1">Active</option>
                <option value="0">Inactive</option>
              </select>
            </div>
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-warning me-3">
                Update Expenses Head
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Edit expenses head form -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Edit Modal -->
</div>
<!-- / Content -->

<script>
  // Handle edit button clicks
  document.addEventListener("DOMContentLoaded", function () {
    const editButtons = document.querySelectorAll(".btn-edit");
    const editModal = new bootstrap.Modal(document.getElementById("editModal"));
    const editForm = document.getElementById("editForm");

    editButtons.forEach((button) => {
      button.addEventListener("click", function () {
        const id = this.getAttribute("data-id");
        const accountCodeGroupsId = this.getAttribute(
          "data-account-code-groups-id"
        );
        const code = this.getAttribute("data-code");
        const title = this.getAttribute("data-title");
        const status = this.getAttribute("data-status");

        // Set form action
        editForm.action = "/Expenses_head/" + id;

        // Populate form fields
        document.getElementById("edit_id").value = id;
        document.getElementById("edit_account_code_groups_id").value =
          accountCodeGroupsId;
        document.getElementById("edit_code").value = code;
        document.getElementById("edit_title").value = title;
        document.getElementById("edit_status").value = status;

        // Show modal
        editModal.show();
      });
    });

    // Confirm delete
    const deleteForms = document.querySelectorAll(".delete-form");
    deleteForms.forEach((form) => {
      form.addEventListener("submit", function (e) {
        if (!confirm("Are you sure you want to delete this expenses head?")) {
          e.preventDefault();
        }
      });
    });
  });
</script>
