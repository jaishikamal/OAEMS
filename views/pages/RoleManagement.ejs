                            <input
                              class="form-check-input permission-checkbox"
                              type="checkbox"
                              id="repoRead"
                              value="repository_management_read"
                            />
                            <label class="form-check-label" for="repoRead">Read</label>
                          </div>
                          <div class="form-check mb-0">
                            <input
                              class="form-check-input permission-checkbox"
