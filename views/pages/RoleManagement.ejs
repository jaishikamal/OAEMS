  <div class="col-12">
    <!-- Role Table -->
    <div class="card">
      <div class="card-datatable">
        <table class="datatables-users table border-top">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Description</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% roles.forEach(function(role) { %>
            <tr>
              <td><%= role.id %></td>
              <td><%= role.name %></td>
              <td><%= role.description %></td>
              <td data-field="status">
                <% if (role.is_active) { %>
                <span class="badge bg-label-success">Active</span>
                <% } else { %>
                <span class="badge bg-label-danger">Inactive</span>
                <% } %>
              </td>
              <td class="text-end">
                <a href="#" class="btn-edit" data-role-id="<%= role.id %>"
                  ><i class="icon-base ti tabler-edit me-1"></i
                ></a>
                <a href="#" class="btn-delete" data-role-id="<%= role.id %>"
                  ><i class="icon-base ti tabler-trash me-1 text-danger"></i
                ></a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
