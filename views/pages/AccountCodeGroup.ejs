<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
  <!-- Success/Error Messages -->
  <% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %> <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- Header section-->
  <div class="row gy-3 align-items-center mb-4">
    <div class="col-lg-6">
      <div class="d-flex align-items-start gap-2">
        <div class="avatar avatar-md flex-shrink-0 bg-label-primary">
          <span class="avatar-initial rounded">
            <i class="icon-base ti tabler-category"></i>
          </span>
        </div>
        <div>
          <h4 class="mb-1">Account Code Group Management</h4>
          <p class="text-muted mb-0">
            Manage account code groups within the application.
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-6 d-flex flex-wrap justify-content-lg-end gap-2">
      <button
        type="button"
        class="btn btn-label-primary"
        data-bs-toggle="modal"
        data-bs-target="#addModal"
      >
        <i class="icon-base ti tabler-plus me-1"></i>Add Account Code Group
      </button>
    </div>
  </div>
  <!--Header section---->

  <div class="col-12">
    <!-- Account Code Group Table -->
    <div class="card">
      <div class="card-datatable">
        <table class="datatables-users table border-top">
          <thead>
            <tr>
              <th>ID</th>
              <th>Code</th>
              <th>Description</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (accountGroupData && accountGroupData.length > 0) { %> <%
            accountGroupData.forEach(function(group) { %>
            <tr>
              <td><%= group.id %></td>
              <td><strong><%= group.code %></strong></td>
              <td><%= group.description || 'No description' %></td>
              <td data-field="status">
                <% if (group.status) { %>
                <span class="badge bg-label-success">Active</span>
                <% } else { %>
                <span class="badge bg-label-danger">Inactive</span>
                <% } %>
              </td>
              <td class="text-end">
                <div class="d-inline-flex gap-2">
                  <button
                    class="btn btn-sm btn-icon btn-text-secondary rounded-pill btn-edit"
                    data-id="<%= group.id %>"
                    data-code="<%= group.code %>"
                    data-description="<%= group.description || '' %>"
                    data-status="<%= group.status ? '1' : '0' %>"
                    title="Edit Account Code Group"
                  >
                    <i class="icon-base ti tabler-edit"></i>
                  </button>
                  <form
                    action="/AccountCodeGroup/<%= group.id %>/delete"
                    method="POST"
                    class="d-inline delete-form"
                  >
                    <button
                      class="btn btn-sm btn-icon btn-text-danger rounded-pill"
                      type="submit"
                      title="Delete Account Code Group"
                    >
                      <i class="icon-base ti tabler-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="5" class="text-center py-4">
                <div class="text-muted">
                  <i class="icon-base ti tabler-alert-circle fs-3 mb-2"></i>
                  <p>
                    No account code groups found. Click "Add Account Code Group"
                    to create your first group.
                  </p>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Account Code Group Table -->
  </div>

  <!-- Add Modal -->
  <div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Add New Account Code Group</h4>
            <p class="text-body-secondary">Enter account code group details</p>
          </div>
          <!-- Add account code group form -->
          <form action="/AccountCodeGroup" method="POST" id="addForm">
            <% if (typeof isFirstEntry !== 'undefined' && isFirstEntry) { %>
            <!-- First Entry - User provides code -->
            <div class="col-12 mb-3">
              <label class="form-label" for="code">
                Code <span class="text-danger">*</span>
              </label>
              <input
                type="text"
                id="code"
                name="code"
                class="form-control"
                placeholder="Enter 3-digit code (100-999)"
                pattern="\d{3}"
                minlength="3"
                maxlength="3"
                required
              />
              <small class="text-primary">
                <i class="ti ti-info-circle"></i> First entry: You must provide a 3-digit starting code (100-999)
              </small>
            </div>
            <% } else { %>
            <!-- Subsequent Entries - System generates code -->
            <div class="col-12 mb-3">
              <label class="form-label" for="code_display">Code</label>
              <input
                type="text"
                id="code_display"
                class="form-control bg-light"
                value="Auto-generated (next sequential)"
                disabled
              />
              <small class="text-muted">
                <i class="ti ti-lock"></i> Code will be automatically generated as the next sequential number
              </small>
            </div>
            <% } %>
            
            <div class="col-12 mb-3">
              <label class="form-label" for="description">
                Description <span class="text-danger">*</span>
              </label>
              <textarea
                id="description"
                name="description"
                class="form-control"
                placeholder="Enter description"
                rows="3"
                required
              ></textarea>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="status">Status</label>
              <select id="status" name="status" class="form-select">
                <option value="true" selected>Active</option>
                <option value="false">Inactive</option>
              </select>
            </div>
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-primary me-3">
                Add Account Code Group
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Add account code group form -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Add Modal -->

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Edit Account Code Group</h4>
            <p class="text-body-secondary">Update account code group details</p>
          </div>
          <!-- Edit account code group form -->
          <form id="editForm" method="POST">
            <input type="hidden" id="edit_id" name="id" />
            <div class="col-12 mb-3">
              <label class="form-label" for="edit_code">
                Code <span class="text-danger">*</span>
              </label>
              <input
                type="text"
                id="edit_code"
                name="code"
                class="form-control"
                placeholder="Enter 3-digit code (100-999)"
                pattern="\d{3}"
                minlength="3"
                maxlength="3"
                required
              />
              <small class="text-warning">
                <i class="ti ti-alert-triangle"></i> If this code exists, system will assign the next available code
              </small>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="edit_description">
                Description <span class="text-danger">*</span>
              </label>
              <textarea
                id="edit_description"
                name="description"
                class="form-control"
                placeholder="Enter description"
                rows="3"
                required
              ></textarea>
            </div>
            <div class="col-12 mb-3">
              <label class="form-label" for="edit_status">Status</label>
              <select id="edit_status" name="status" class="form-select">
                <option value="1">Active</option>
                <option value="0">Inactive</option>
              </select>
            </div>
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-warning me-3">
                Update Account Code Group
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Edit account code group form -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Edit Modal -->
</div>
<!-- / Content -->

<script>
  // Handle edit button clicks
  document.addEventListener("DOMContentLoaded", function () {
    const editButtons = document.querySelectorAll(".btn-edit");
    const editModal = new bootstrap.Modal(document.getElementById("editModal"));
    const editForm = document.getElementById("editForm");

    editButtons.forEach((button) => {
      button.addEventListener("click", function () {
        const id = this.getAttribute("data-id");
        const code = this.getAttribute("data-code");
        const description = this.getAttribute("data-description");
        const status = this.getAttribute("data-status");

        // Set form action
        editForm.action = "/AccountCodeGroup/" + id;

        // Populate form fields
        document.getElementById("edit_id").value = id;
        document.getElementById("edit_code").value = code;
        document.getElementById("edit_description").value = description;
        document.getElementById("edit_status").value = status;

        // Show modal
        editModal.show();
      });
    });

    // Confirm delete
    const deleteForms = document.querySelectorAll(".delete-form");
    deleteForms.forEach((form) => {
      form.addEventListener("submit", function (e) {
        if (
          !confirm("Are you sure you want to delete this account code group?")
        ) {
          e.preventDefault();
        }
      });
    });

    // Validate code input (first entry only)
    const codeInput = document.getElementById("code");
    if (codeInput) {
      codeInput.addEventListener("input", function (e) {
        // Only allow digits
        this.value = this.value.replace(/\D/g, "");
        
        // Limit to 3 digits
        if (this.value.length > 3) {
          this.value = this.value.slice(0, 3);
        }
      });

      // Validate on form submit
      const addForm = document.getElementById("addForm");
      addForm.addEventListener("submit", function (e) {
        const code = codeInput.value;
        const codeNum = parseInt(code);
        
        if (code.length !== 3) {
          e.preventDefault();
          alert("Code must be exactly 3 digits");
          return false;
        }
        
        if (codeNum < 100 || codeNum > 999) {
          e.preventDefault();
          alert("Code must be between 100 and 999");
          return false;
        }
      });
    }

    // Validate edit code input
    const editCodeInput = document.getElementById("edit_code");
    if (editCodeInput) {
      editCodeInput.addEventListener("input", function (e) {
        // Only allow digits
        this.value = this.value.replace(/\D/g, "");
        
        // Limit to 3 digits
        if (this.value.length > 3) {
          this.value = this.value.slice(0, 3);
        }
      });

      // Validate on form submit
      editForm.addEventListener("submit", function (e) {
        const code = editCodeInput.value;
        const codeNum = parseInt(code);
        
        if (code.length !== 3) {
          e.preventDefault();
          alert("Code must be exactly 3 digits");
          return false;
        }
        
        if (codeNum < 100 || codeNum > 999) {
          e.preventDefault();
          alert("Code must be between 100 and 999");
          return false;
        }
      });
    }
  });
</script>