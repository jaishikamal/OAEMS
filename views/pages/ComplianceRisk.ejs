<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
  <!-- Success/Error Messages -->
  <% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %> <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- Header section-->
  <div class="row gy-3 align-items-center mb-4">
    <div class="col-lg-6">
      <div class="d-flex align-items-start gap-2">
        <div class="avatar avatar-md flex-shrink-0 bg-label-primary">
          <span class="avatar-initial rounded">
            <i class="icon-base ti tabler-shield-check"></i>
          </span>
        </div>
        <div>
          <h4 class="mb-1">Compliance and Risk Management</h4>
          <p class="text-muted mb-0">
            Manage vendor compliance and risk assessment here.
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-6 d-flex flex-wrap justify-content-lg-end gap-2">
      <button
        type="button"
        class="btn btn-label-primary"
        data-bs-toggle="modal"
        data-bs-target="#addModal"
      >
        <i class="icon-base ti tabler-plus me-1"></i>Add Compliance Record
      </button>
    </div>
  </div>
  <!--Header section---->

  <div class="col-12">
    <!-- Compliance Risk Table -->
    <div class="card">
      <div class="card-datatable">
        <table class="datatables-users table border-top">
          <thead>
            <tr>
              <th>ID</th>
              <th>Risk Category</th>
              <th>Related Party</th>
              <th>Government Vendor</th>
              <th>Blacklisted</th>
              <th>Remarks</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (complianceRisks && complianceRisks.length > 0) { %>
            <% complianceRisks.forEach(function(compliance) { %>
            <tr>
              <td><%= compliance.id %></td>
              <td>
                <% if (compliance.vendorRiskCategory === 'Low') { %>
                <span class="badge bg-label-success">Low</span>
                <% } else if (compliance.vendorRiskCategory === 'Medium') { %>
                <span class="badge bg-label-info">Medium</span>
                <% } else if (compliance.vendorRiskCategory === 'High') { %>
                <span class="badge bg-label-warning">High</span>
                <% } else if (compliance.vendorRiskCategory === 'Critical') { %>
                <span class="badge bg-label-danger">Critical</span>
                <% } %>
              </td>
              <td>
                <% if (compliance.relatedParty) { %>
                <span class="badge bg-label-warning">Yes</span>
                <% } else { %>
                <span class="badge bg-label-secondary">No</span>
                <% } %>
              </td>
              <td>
                <% if (compliance.governmentVendor) { %>
                <span class="badge bg-label-info">Yes</span>
                <% } else { %>
                <span class="badge bg-label-secondary">No</span>
                <% } %>
              </td>
              <td>
                <% if (compliance.blacklisted) { %>
                <span class="badge bg-label-danger">Yes</span>
                <% } else { %>
                <span class="badge bg-label-success">No</span>
                <% } %>
              </td>
              <td>
                <% if (compliance.remarks) { %>
                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="<%= compliance.remarks %>">
                  <%= compliance.remarks %>
                </span>
                <% } else { %>
                <span class="text-muted">N/A</span>
                <% } %>
              </td>
              <td class="text-end">
                <div class="d-inline-flex gap-2">
                  <button
                    class="btn btn-sm btn-icon btn-text-secondary rounded-pill btn-edit"
                    data-id="<%= compliance.id %>"
                    data-vendor-risk-category="<%= compliance.vendorRiskCategory %>"
                    data-related-party="<%= compliance.relatedParty ? '1' : '0' %>"
                    data-government-vendor="<%= compliance.governmentVendor ? '1' : '0' %>"
                    data-blacklisted="<%= compliance.blacklisted ? '1' : '0' %>"
                    data-remarks="<%= compliance.remarks || '' %>"
                    title="Edit Compliance Record"
                  >
                    <i class="icon-base ti tabler-edit"></i>
                  </button>
                  <form
                    action="/ComplianceRisk/<%= compliance.id %>/delete"
                    method="POST"
                    class="d-inline delete-form"
                  >
                    <button
                      class="btn btn-sm btn-icon btn-text-danger rounded-pill"
                      type="submit"
                      title="Delete Compliance Record"
                    >
                      <i class="icon-base ti tabler-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="7" class="text-center py-4">
                <div class="text-muted">
                  <i class="icon-base ti tabler-alert-circle fs-3 mb-2"></i>
                  <p>No compliance records found. Please add new compliance records.</p>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Compliance Risk Table -->
  </div>

  <!-- Add Modal -->
  <div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Add New Compliance and Risk Record</h4>
            <p class="text-body-secondary">Enter compliance and risk assessment details</p>
          </div>
          <!-- Add compliance risk form -->
          <form action="/ComplianceRisk" method="POST" id="addForm">
            <div class="row">
              <div class="col-md-6 mb-4">
                <label class="form-label" for="vendorRiskCategory">
                  Vendor Risk Category <span class="text-danger">*</span>
                </label>
                <select
                  id="vendorRiskCategory"
                  name="vendorRiskCategory"
                  class="form-select"
                  required
                >
                  <option value="">Select Risk Category</option>
                  <option value="Low">Low</option>
                  <option value="Medium">Medium</option>
                  <option value="High">High</option>
                  <option value="Critical">Critical</option>
                </select>
              </div>
              <div class="col-md-6 mb-4">
                <label class="form-label d-block">
                  Related Party <span class="text-danger">*</span>
                </label>
                <div class="form-check form-check-inline mt-2">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="relatedParty"
                    id="relatedPartyYes"
                    value="true"
                    required
                  />
                  <label class="form-check-label" for="relatedPartyYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="relatedParty"
                    id="relatedPartyNo"
                    value="false"
                    checked
                  />
                  <label class="form-check-label" for="relatedPartyNo">No</label>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-4">
                <label class="form-label d-block">
                  Government Vendor <span class="text-danger">*</span>
                </label>
                <div class="form-check form-check-inline mt-2">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="governmentVendor"
                    id="governmentVendorYes"
                    value="true"
                    required
                  />
                  <label class="form-check-label" for="governmentVendorYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="governmentVendor"
                    id="governmentVendorNo"
                    value="false"
                    checked
                  />
                  <label class="form-check-label" for="governmentVendorNo">No</label>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <label class="form-label d-block">
                  Blacklisted <span class="text-danger">*</span>
                </label>
                <div class="form-check form-check-inline mt-2">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="blacklisted"
                    id="blacklistedYes"
                    value="true"
                    required
                  />
                  <label class="form-check-label" for="blacklistedYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="blacklisted"
                    id="blacklistedNo"
                    value="false"
                    checked
                  />
                  <label class="form-check-label" for="blacklistedNo">No</label>
                </div>
              </div>
            </div>

            <div class="col-12 mb-3">
              <label class="form-label" for="remarks">
                Remarks <span class="text-danger" id="remarksRequired" style="display: none;">*</span>
              </label>
              <textarea
                id="remarks"
                name="remarks"
                class="form-control"
                placeholder="Enter remarks (required if blacklisted)"
                rows="4"
              ></textarea>
              <small class="text-muted" id="remarksHelpText">
                Remarks are required if vendor is blacklisted
              </small>
            </div>

            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-primary me-3">
                Add Compliance Record
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Add compliance risk form  -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Add Modal -->

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="text-center mb-6">
            <h4 class="mb-2">Edit Compliance and Risk Record</h4>
            <p class="text-body-secondary">Update compliance and risk assessment details</p>
          </div>
          <!-- Edit compliance risk form -->
          <form id="editForm" method="POST">
            <input type="hidden" id="edit_id" name="id" />
            <div class="row">
              <div class="col-md-6 mb-4">
                <label class="form-label" for="edit_vendorRiskCategory">
                  Vendor Risk Category <span class="text-danger">*</span>
                </label>
                <select
                  id="edit_vendorRiskCategory"
                  name="vendorRiskCategory"
                  class="form-select"
                  required
                >
                  <option value="">Select Risk Category</option>
                  <option value="Low">Low</option>
                  <option value="Medium">Medium</option>
                  <option value="High">High</option>
                  <option value="Critical">Critical</option>
                </select>
              </div>
              <div class="col-md-6 mb-4">
                <label class="form-label d-block">
                  Related Party <span class="text-danger">*</span>
                </label>
                <div class="form-check form-check-inline mt-2">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="relatedParty"
                    id="edit_relatedPartyYes"
                    value="1"
                    required
                  />
                  <label class="form-check-label" for="edit_relatedPartyYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="relatedParty"
                    id="edit_relatedPartyNo"
                    value="0"
                  />
                  <label class="form-check-label" for="edit_relatedPartyNo">No</label>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-4">
                <label class="form-label d-block">
                  Government Vendor <span class="text-danger">*</span>
                </label>
                <div class="form-check form-check-inline mt-2">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="governmentVendor"
                    id="edit_governmentVendorYes"
                    value="1"
                    required
                  />
                  <label class="form-check-label" for="edit_governmentVendorYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="governmentVendor"
                    id="edit_governmentVendorNo"
                    value="0"
                  />
                  <label class="form-check-label" for="edit_governmentVendorNo">No</label>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <label class="form-label d-block">
                  Blacklisted <span class="text-danger">*</span>
                </label>
                <div class="form-check form-check-inline mt-2">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="blacklisted"
                    id="edit_blacklistedYes"
                    value="1"
                    required
                  />
                  <label class="form-check-label" for="edit_blacklistedYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="blacklisted"
                    id="edit_blacklistedNo"
                    value="0"
                  />
                  <label class="form-check-label" for="edit_blacklistedNo">No</label>
                </div>
              </div>
            </div>

            <div class="col-12 mb-3">
              <label class="form-label" for="edit_remarks">
                Remarks <span class="text-danger" id="edit_remarksRequired" style="display: none;">*</span>
              </label>
              <textarea
                id="edit_remarks"
                name="remarks"
                class="form-control"
                placeholder="Enter remarks (required if blacklisted)"
                rows="4"
              ></textarea>
              <small class="text-muted" id="edit_remarksHelpText">
                Remarks are required if vendor is blacklisted
              </small>
            </div>

            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-warning me-3">
                Update Compliance Record
              </button>
              <button
                type="reset"
                class="btn btn-label-secondary"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Cancel
              </button>
            </div>
          </form>
          <!--/ Edit compliance risk form -->
        </div>
      </div>
    </div>
  </div>
  <!--/ Edit Modal -->
</div>
<!-- / Content -->

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Add Form - Handle blacklisted change
    const blacklistedRadios = document.querySelectorAll('input[name="blacklisted"]');
    const remarksInput = document.getElementById("remarks");
    const remarksRequired = document.getElementById("remarksRequired");
    const remarksHelpText = document.getElementById("remarksHelpText");

    blacklistedRadios.forEach((radio) => {
      radio.addEventListener("change", function () {
        if (this.value === "true") {
          remarksInput.required = true;
          remarksRequired.style.display = "inline";
          remarksHelpText.textContent = "Remarks are mandatory for blacklisted vendors";
          remarksHelpText.className = "text-danger";
        } else {
          remarksInput.required = false;
          remarksRequired.style.display = "none";
          remarksHelpText.textContent = "Remarks are required if vendor is blacklisted";
          remarksHelpText.className = "text-muted";
        }
      });
    });

    // Edit Form - Handle blacklisted change
    const editBlacklistedRadios = document.querySelectorAll('input[name="blacklisted"]');
    const editRemarksInput = document.getElementById("edit_remarks");
    const editRemarksRequired = document.getElementById("edit_remarksRequired");
    const editRemarksHelpText = document.getElementById("edit_remarksHelpText");

    // Need to use event delegation since edit form radios are dynamically loaded
    document.getElementById("editForm").addEventListener("change", function (e) {
      if (e.target.name === "blacklisted") {
        if (e.target.value === "1") {
          editRemarksInput.required = true;
          editRemarksRequired.style.display = "inline";
          editRemarksHelpText.textContent = "Remarks are mandatory for blacklisted vendors";
          editRemarksHelpText.className = "text-danger";
        } else {
          editRemarksInput.required = false;
          editRemarksRequired.style.display = "none";
          editRemarksHelpText.textContent = "Remarks are required if vendor is blacklisted";
          editRemarksHelpText.className = "text-muted";
        }
      }
    });

    // Handle edit button clicks
    const editButtons = document.querySelectorAll(".btn-edit");
    const editModal = new bootstrap.Modal(document.getElementById("editModal"));
    const editForm = document.getElementById("editForm");

    editButtons.forEach((button) => {
      button.addEventListener("click", function () {
        const id = this.getAttribute("data-id");
        const vendorRiskCategory = this.getAttribute("data-vendor-risk-category");
        const relatedParty = this.getAttribute("data-related-party");
        const governmentVendor = this.getAttribute("data-government-vendor");
        const blacklisted = this.getAttribute("data-blacklisted");
        const remarks = this.getAttribute("data-remarks");

        // Set form action
        editForm.action = "/ComplianceRisk/" + id;

        // Populate form fields
        document.getElementById("edit_id").value = id;
        document.getElementById("edit_vendorRiskCategory").value = vendorRiskCategory;
        document.getElementById("edit_remarks").value = remarks;

        // Set radio buttons
        if (relatedParty === "1") {
          document.getElementById("edit_relatedPartyYes").checked = true;
        } else {
          document.getElementById("edit_relatedPartyNo").checked = true;
        }

        if (governmentVendor === "1") {
          document.getElementById("edit_governmentVendorYes").checked = true;
        } else {
          document.getElementById("edit_governmentVendorNo").checked = true;
        }

        if (blacklisted === "1") {
          document.getElementById("edit_blacklistedYes").checked = true;
          editRemarksInput.required = true;
          editRemarksRequired.style.display = "inline";
          editRemarksHelpText.textContent = "Remarks are mandatory for blacklisted vendors";
          editRemarksHelpText.className = "text-danger";
        } else {
          document.getElementById("edit_blacklistedNo").checked = true;
          editRemarksInput.required = false;
          editRemarksRequired.style.display = "none";
          editRemarksHelpText.textContent = "Remarks are required if vendor is blacklisted";
          editRemarksHelpText.className = "text-muted";
        }

        // Show modal
        editModal.show();
      });
    });

    // Confirm delete
    const deleteForms = document.querySelectorAll(".delete-form");
    deleteForms.forEach((form) => {
      form.addEventListener("submit", function (e) {
        if (!confirm("Are you sure you want to delete this compliance record?")) {
          e.preventDefault();
        }
      });
    });

    // Reset form on modal close
    document.getElementById("addModal").addEventListener("hidden.bs.modal", function () {
      document.getElementById("addForm").reset();
      remarksInput.required = false;
      remarksRequired.style.display = "none";
      remarksHelpText.textContent = "Remarks are required if vendor is blacklisted";
      remarksHelpText.className = "text-muted";
    });
  });
</script>